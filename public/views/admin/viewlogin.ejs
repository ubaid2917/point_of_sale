<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Login</title>
    <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;1,400;1,500&family=Open+Sans:ital,wght@0,400;0,700;1,400&family=Lato:ital,wght@0,400;0,700;1,400&family=Raleway:ital,wght@0,400;0,700;1,400&family=Roboto:ital,wght@0,400;0,500;1,400;1,500&display=swap"
    rel="stylesheet"
  />
    <style>
      /* Reset some default styles */
      body,
      h1,
      h2,
      h3,
      p {
        margin: 0;
        padding: 0;
        font-family: 'Open Sans', sans-serif;
      }

      /* Add some spacing */
      body {
        padding: 20px;
        background-color: rgb(198, 197, 197);
      }

      /* Style for the table */
      .styled-table {
        border-collapse: collapse;
        width: 100%;
        max-width: 900px;
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        margin: 40px auto;
      }

      .styled-table thead th {
        background-color: #65a4ce;
        color: #ffffff;
        font-weight: bold;
        padding: 10px 15px;
        text-align: left;
      }

      .styled-table tbody td {
        padding: 10px 15px;
        border-bottom: 1px solid #dddddd;
        color: #333;
      }

      .styled-table tbody tr:last-child td {
        border-bottom: none;
      }

      /* Add hover effect */
      .styled-table tbody tr:hover {
        background-color: #f2f2f2;
        transition: background-color 0.3s;
      }
      .editbtn {
      display: inline-block;
      padding: 8px 16px;
      background-color: rgba(238, 174, 202, 1);
      color: #ffffff;
      font-size: 14px;
      font-weight: bold;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s, transform 0.2s;
    }

    .editbtn:hover {
      background-color: #5188a0;
      transform: scale(1.05);
    }
    .dltbtn{
      display: inline-block;
      padding: 8px 16px;
      background-color: rgba(148, 187, 233, 1);
      color: #ffffff;
      font-size: 14px;
      font-weight: bold;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s, transform 0.2s;
    }
    .dltbtn:hover {
      background-color: rgba(148,233,148,1);
      transform: scale(1.05);
    }
    </style>
  </head>
  <body>
    <table class="styled-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (user.length > 0) { %>
            <% user.forEach((userItem) => { %>
                <tr>
                    <td><%= userItem.name %></td>
                    <td><%= userItem.email %></td>
                    <td><%= userItem.role %></td>
                    <td>
                      <a href="/loginedit/<%= userItem._id %>" class="editbtn">Edit User</a>
                      <a href="/logindelete/<%= userItem._id %>" class="dltbtn" onclick="return confirm('Are you sure to Delete this user?')">Delete User</a>

                    </td>
                    
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3">No users found</td>
            </tr>
        <% } %>

       
    </tbody>
    
    </table>
  </body>
</html>
